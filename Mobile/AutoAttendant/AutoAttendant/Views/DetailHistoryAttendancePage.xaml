<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoAttendant.Views.DetailHistoryAttendancePage">
    <ContentPage.Content>

        <StackLayout BackgroundColor="#021135">
            <StackLayout Orientation="Horizontal" Padding="5,0,0,0" VerticalOptions="CenterAndExpand" HorizontalOptions="Center">

                <Button Text="Open PDF" x:Name="btn_Open" ContentLayout="Left" ImageSource="pdf"
                        HorizontalOptions="Fill" BackgroundColor="#021135" 
                        TextTransform="None" FontSize="16" Clicked="OpenPDF"
                        Margin="0,0,0,10"  TextColor="#FFF" BorderRadius="10"
                        BorderColor="#FFF" BorderWidth="1"/>
                <Button Text="Send to Email" x:Name="btn_Send" ContentLayout="Left" ImageSource="email"
                        HorizontalOptions="Fill" BackgroundColor="#021135" TextTransform="None" FontSize="16"
                        Margin="40,0,0,10"  TextColor="#FFF" BorderRadius="10"
                        BorderColor="#FFF" BorderWidth="1" Clicked="SendToEmail"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>