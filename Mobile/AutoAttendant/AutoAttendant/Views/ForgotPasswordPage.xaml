<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:AutoAttendant"
             x:Class="AutoAttendant.Views.ForgotPasswordPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" BackgroundColor="#021135" Padding="20,30">
            <Label Text="Reset Password" FontSize="17" FontAttributes="Bold" TextColor="#FFF" Margin="0,0,0,10"></Label>
            <Label Text="Enter the Email associated with your account and we'll send an email with instructions to reset your password."
                   TextColor="#FFF" Opacity="0.7" FontSize="15" Margin="0,0,0,10">
            </Label>
            <Label Text="Your Email" FontSize="16" TextColor="#FFF" Margin="0,0,0,10" FontAttributes="Bold"></Label>
            <local:CustomEntry x:Name="Entry_email" TextColor="#FFF" 
                                   HeightRequest="40" BackgroundColor="#022656"
                                   Margin="0,0,0,15">
            </local:CustomEntry>

            <Button Text="Send" BackgroundColor="#1832F6" TextTransform="None" FontAttributes="Bold"
                        FontSize="17" TextColor="#FFF" BorderRadius="8" Margin="0,10,0,0"
                        Clicked="SendEmailToReset" HeightRequest="40">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>