<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:AutoAttendant"
             x:Class="AutoAttendant.Views.SignUpPage"
             >
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Priority="0" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <ScrollView BackgroundColor="#021135" Padding="0,20">
            <!--<StackLayout Orientation="Vertical" Margin="20,20,20,10">
                <Label Text="Sign up with" FontSize="16" TextColor="#FFF" FontAttributes="Bold"/>
                <Button Text="Your Microsoft Account" ContentLayout="Left" ImageSource="microsoft25px"
                        BackgroundColor="#022656" HorizontalOptions="Start"
                        FontAttributes="Bold" TextTransform="None" FontSize="16"
                        TextColor="#FFF" BorderRadius="10"
                        BorderColor="#FFF" WidthRequest="260" />
            </StackLayout>-->
            <StackLayout Orientation="Vertical" Margin="20">

                <Label  x:Name="Lb_id" Text="ID"
                        VerticalOptions="Center" 
                        HorizontalOptions="Start" 
                        TextColor="#FFF"
                        FontSize="18"
                        FontFamily=""
                        FontAttributes="Bold"/>

                <local:CustomEntry x:Name="Entry_Id" TextColor="#FFF" 
                                   HeightRequest="40" BackgroundColor="#022656"
                                   VerticalOptions="StartAndExpand"
                                   Margin="0,0,0,15">
                </local:CustomEntry>
                
                <Label  x:Name="Lb_Name" Text="Name"
                        VerticalOptions="Center" 
                        HorizontalOptions="Start" 
                        TextColor="#FFF"
                        FontSize="18"
                        FontFamily=""
                        FontAttributes="Bold"/>

                <local:CustomEntry x:Name="Entry_name" TextColor="#FFF" 
                                   HeightRequest="40" BackgroundColor="#022656"
                                   VerticalOptions="StartAndExpand"
                                   Margin="0,0,0,15">
                </local:CustomEntry>

                <Label  x:Name="Lb_email" Text="E-mail or Username"
                        VerticalOptions="Center" 
                        HorizontalOptions="Start" 
                        TextColor="#FFF"
                        FontSize="18"
                        FontFamily=""
                        FontAttributes="Bold"/>

                <local:CustomEntry x:Name="Entry_email" TextColor="#FFF" 
                                   HeightRequest="40" BackgroundColor="#022656"
                                   VerticalOptions="StartAndExpand"
                                   Margin="0,0,0,15">
                </local:CustomEntry>

                <Label  x:Name="Lb_password" Text="Password"
                        VerticalOptions="Center" 
                        HorizontalOptions="Start" 
                        TextColor="#FFF"
                        FontSize="18"
                        FontAttributes="Bold"/>

                <local:CustomEntry x:Name="Entry_password" IsPasswordFlag="True"
                                   IsPassword="True" TextColor="#FFF"
                                   HeightRequest="40" BackgroundColor="#022656"
                                   >
                </local:CustomEntry>

                <Label  x:Name="Lb_phone" Text="Phone"
                        VerticalOptions="Center" 
                        HorizontalOptions="Start" 
                        TextColor="#FFF"
                        FontSize="18"
                        FontFamily=""
                        FontAttributes="Bold"/>

                <local:CustomEntry x:Name="Entry_phone" TextColor="#FFF"  
                                   HeightRequest="40" BackgroundColor="#022656"
                                   VerticalOptions="StartAndExpand"
                                   Margin="0,0,0,15">
                </local:CustomEntry>

                <Label  x:Name="Lb_faculty" Text="Faculty"
                        VerticalOptions="Center" 
                        HorizontalOptions="Start" 
                        TextColor="#FFF"
                        FontSize="18"
                        FontFamily=""
                        FontAttributes="Bold"/>

                <local:CustomEntry x:Name="Entry_faculty" TextColor="#FFF" 
                                   HeightRequest="40" BackgroundColor="#022656"
                                   VerticalOptions="StartAndExpand"
                                   Margin="0,0,0,15">
                </local:CustomEntry>

                <Button Text="Create account" BackgroundColor="#1832F6" TextTransform="None" FontAttributes="Bold"
                        FontSize="16" TextColor="#FFF" BorderRadius="8" Margin="0,30,0,0" Clicked="btnSignUP"  HeightRequest="40">
                 
                </Button>
                <StackLayout Orientation="Horizontal" Margin="0,20,0,0">

                    <Label Text="Already have an account?"
                       TextColor="#FFF"
                       FontSize="16"/>

                    <Label x:Name="btn_BackToLogin" Text="Login"
                       TextColor="#FFF"
                       TextTransform="None"
                       BackgroundColor="#021135"
                       FontAttributes="Bold"
                       FontSize="17"
                       Margin="5,-1,0,0">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Login" />
                        </Label.GestureRecognizers>
                    </Label>

                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>